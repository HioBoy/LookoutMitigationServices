<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!--
    The Bobcat server offers an easy to use Tomcat-based endpoint. This endpoint is more performant and vetted by
    security for use in production scenarios.
   -->
  <bean class="com.amazon.coral.spring.director.live.LivePlan">
      <property name="plainTarget" ref="bobcat"/>
  </bean>
  
  <bean name="bobcat" class="com.amazon.coral.service.bobcat.BobcatServer">  
      <constructor-arg>
          <bean class="com.amazon.coral.service.bobcat.BobcatEndpointConfig">
              <property name="metricsFactory" ref="metricsFactory"/>
              <property name="orchestrator" ref="orchestrator"/>
              <property name="numThreads" value="60"/>
              <!-- TLS proxy (JLBRelay) decrypts traffic and forwards clear-text http to httpRegularPort. Only accept connections from localhost -->
              <property name="uri" value="http://127.0.0.1:${apollo.OCF.HttpServer.httpRegularPort}"/>
          </bean>
      </constructor-arg>
  </bean>  
    
</beans>

